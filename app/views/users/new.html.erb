<div class="col-md-5 col-md-offset-3">
<h1>Join The Fiends Of Caffeine</h1>

<%= simple_form_for @user do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: "Password Confirmation" %>
  <%= f.submit "Sign Up", class: "btn btn-primary btn-block btn-md" %>
<% end %>

</div>
