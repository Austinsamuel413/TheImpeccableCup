<div class="col-md-4 col-md-offset-4">
<h1>The Impeccable Cup</h1>
<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary" %> or <%= link_to "Sign Up", sign_up_path %>
  </div>

<% end %>

</div>
